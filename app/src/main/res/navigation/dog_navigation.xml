<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dog_navigation"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.mmontilla.dogs.view.ListFragment"
        android:label="Dogs List">
        <action
            android:id="@+id/listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.mmontilla.dogs.view.DetailFragment"
        android:label="Detail List">
        <action
            android:id="@+id/detailFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="dogUid"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>